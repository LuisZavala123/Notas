<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/unatarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/nombretarea"
            android:text="Este es el nombre de la tarea"
            android:textSize="22sp"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/descripciontarea"
            android:text="Esta es la descripciÃ³n de la tarea que se ve cuando se guarda una uwu"
            android:textSize="10sp"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombretarea"
            android:layout_alignLeft="@+id/nombretarea"
            android:layout_alignStart="@+id/nombretarea" />
    </RelativeLayout>

    <View
        android:layout_below="@+id/unatarea"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FFF491" />

</RelativeLayout>